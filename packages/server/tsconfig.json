{
    "extends": "../../tsconfig.json", // This config extends the parent config
    "compilerOptions": {
        "esModuleInterop": true,
        "lib": ["es2020"],
        "module": "es2022",
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "composite": true,
        "strict": true,
        "sourceMap": true,
        "target": "es2022",
        "types": ["node"],
        "outDir": "dist"
      },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }