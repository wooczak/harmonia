{
  "extends": "../../tsconfig.json", // This config extends the parent config
  "compilerOptions": {
    "jsx": "preserve",
    "rootDir": ".",
    "outDir": "./dist",
    "baseUrl": ".",
    "sourceMap": true,
    "resolveJsonModule": true,
    "composite": true, // Needs to be enabled for referenced projects
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@monorepo/server": [
        "../server/src/index.ts"
      ]
    },
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "module": "esnext",
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "references": [
    {
      "path": "../server"
    }
  ],
  "include": [
    "types/**/*",
    "src/**/*",
    ".next/types/**/*.ts"
, "__tests__/organisms/ Navigation/helpers.test.tsx"  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
